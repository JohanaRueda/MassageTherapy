<!DOCTYPE html>
<html>
<head></head>
<body>
    
<!-- OPTION: the tabs can be changed into static pages for organization purposes -->
<div class="tab">
  <button class="tablinks"><%= link_to "Active Courses", admin_active_path, class: "prettyLink" %></button>
  <button class="tablinks active"><%= link_to "Add Course", admin_add_path, class: "prettyLink" %></button>
  <button class="tablinks"><%= link_to "Edit Course", admin_edit_path, class: "prettyLink" %></button>
  <button class="tablinks"><%= link_to "Delete Course", admin_delete_path, class: "prettyLink" %></button>
</div>

<div id="Add" class="tabcontent">
  <h3>Add Course</h3>
  <%= form_for Course.new do |f| %>
    <%= f.label :courseName %>
    <%= f.text_field :courseName %>

    <%= f.label :courseDesc %>
    <%= f.text_field :courseDesc %>
 
    <br><%= f.submit "Create Course", class: "btn btn-primary" %>
  <% end %>
  
  <h3>Add Offering</h3>
  <%= form_for Offering.new do |f| %>
    <%= f.label :course_id %>
    <%= f.text_field :course_id %>
  
    <%= f.label :courseDate %>
    <%= f.text_field :courseDate %>

    <%= f.label :courseNotes %>
    <%= f.text_field :courseNotes %>
    
    <%= f.label :coursePrice %>
    <%= f.text_field :coursePrice %>

    <br><%= f.submit "Create Offering", class: "btn btn-primary" %>
  <% end %>
</div>

</body>
</html> 