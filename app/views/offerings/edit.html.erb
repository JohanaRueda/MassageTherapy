<div class="col-md-6 col-md-offset-3">
  <div>
    <span class="h3">Editar los detalles de la clase:</span>
  </div>
  <br>
  <%= form_for @offering do |f| %>
      <div class="form-group">
        <%= f.label :course_id, "Curso #:" %>
        <%= f.text_field :course_id, class: "form-control", readonly: true %>
      </div>
      <div class="form-group">
        <%= f.label :courseDate, "Fecha de clase:" %>
        <%= f.date_field :courseDate, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :courseTime, "Hora de clase:" %>
        <%= f.time_field :courseTime, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :coursePrice, "Precio de la clase:" %>
        <div class="input-group">
          <span class="input-group-addon">$</span>
          <%= f.text_field :coursePrice, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :courseNotes, "Otras Notas:" %>
        <%= f.text_field :courseNotes, class: "form-control" %>
      </div>
      <%= f.submit "Guardar", class: "btn btn-default" %>
  <% end %>
</div>