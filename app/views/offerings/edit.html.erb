<div>
  <span class="h3">Update course offering details:</span>
</div>
<br>

<%= form_for @offering do |f| %>

    <div class="form-group">
      <%= f.label :course_id, "Course #:" %>
      <%= f.text_field :course_id, class: "form-control", readonly: true %>
    </div>
    <div class="form-group">
      <%= f.label :courseDate, "Offering Date:" %>
      <%= f.text_field :courseDate, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :coursePrice, "Offering Price:" %>
      <div class="input-group">
        <span class="input-group-addon">$</span>
        <%= f.text_field :coursePrice, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :courseNotes, "Offering Notes:" %>
      <%= f.text_field :courseNotes, class: "form-control" %>
    </div>

    <%= f.submit "Save Changes", class: "btn btn-default" %>
<% end %>
