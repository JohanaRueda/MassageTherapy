<h1>Editing User</h1>
<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :phone, "Confirmation" %>
      <%= f.password_field :phone, class: 'form-control' %>
      
      <%= f.label :address, "Confirmation" %>
      <%= f.password_field :address, class: 'form-control' %>
      
      <%= f.label :admin, "Confirmation" %>
      <%= f.password_field :admin, class: 'form-control' %>
      
      <%= f.label :license, "Confirmation" %>
      <%= f.password_field :license, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
