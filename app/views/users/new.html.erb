<%= form_for User.new do |f| -%>
    <%= f.label "Name" %> <%= f.text_field :name, class: 'form-control'%> <br />
    <%= f.label "Email" %> <%= f.text_field :email,  class: 'form-control'%> <br />
    <%= f.label "Phone" %> <%= f.text_field :phone,  class: 'form-control'%> <br />
    <%= f.label "Address" %> <%= f.text_field :address,  class: 'form-control'%> <br />
    <%= f.label "Admin" %> <%= f.text_field :admin,  class: 'form-control'%> <br />
    <%= f.label "License" %> <%= f.text_field :license,  class: 'form-control'%> <br />
