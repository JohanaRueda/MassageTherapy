<% provide(:title, 'Desempaquetar password') %>

<h1>Update your password</h1>

<p>Please enter the new password below and then press "Update Password".</p>

<%= form_tag password_reset_path, :method => :put do %>
  <%= password_field_tag :password %>
  <%= hidden_field_tag :token, @token %>

  <%= submit_tag "Update Password" %>
<% end %>

<h1>Desempaquetar password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmar" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Actualizar password", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>