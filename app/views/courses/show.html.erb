<div class="tab">
  <button class="tablinks"><a class="prettyLink" href="/static_pages/home"> Home </a></button>
  <button class="tablinks"><%= link_to "Courses", courses_path, class: "prettyLink" %></button>
  <button class="tablinks"><a class="prettyLink" href="/static_pages/contact"> Contact Us </a></button>
  <button class="tablinks"><a class="prettyLink" href="/static_pages/login"> Log In </a></button>
</div>

<div id="Course" class="tabcontent">
  <h3><%= @course.courseName %></h3>

  <table id="offerings">
    <thead>
    <tr>
      <th>Date</th>
      <th>Notes</th>
      <th>Price</th>
    </tr>
    </thead>
    <tbody>
    <% @offerings.each do |offering| %>
        <tr>
          <td><%= offering.courseDate %></td>
          <td><%= offering.courseNotes %></td>
          <td><%= offering.coursePrice %></td>
          <% if session[:user_id] %>
              <td><%= link_to "Register", rosters_path(roster: {user_id: session[:user_id], offering_id: offering.id}), method: :post %></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
