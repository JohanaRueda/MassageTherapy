<div>
  <span class="h1">Clases</span>
</div>
<div class= "Neuromuscular&Prenatal">
    <%= image_tag("nmnatal.png", width: '1100px', align: 'center') %>
</div>
<div class= "triggerpointdeeptissue">
    <%= image_tag("tpdt.png", width: '1100px', align: 'center') %>
</div>
<div class= "sports">
    <%= image_tag("sports.png", width: '1100px', align: 'center') %>
</div>
